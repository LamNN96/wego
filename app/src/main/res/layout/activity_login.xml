<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".screen.login.LoginActivity">


    <EditText
        android:id="@+id/text_username"
        android:layout_width="@dimen/text_login_width"
        android:layout_height="@dimen/text_login_height"
        android:layout_marginStart="@dimen/margin_vertical_default"
        android:layout_marginLeft="@dimen/margin_vertical_default"
        android:layout_marginTop="@dimen/margin_vertical_default"
        android:layout_marginEnd="@dimen/margin_vertical_default"
        android:layout_marginRight="@dimen/margin_vertical_default"
        android:layout_marginBottom="@dimen/margin_vertical_default"
        android:background="@drawable/text_login"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingHorizontal="@dimen/text_login_padding"
        app:layout_constraintBottom_toTopOf="@+id/text_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/text_password"
        android:layout_width="@dimen/text_login_width"
        android:layout_height="@dimen/text_login_height"
        android:layout_marginStart="@dimen/margin_vertical_default"
        android:layout_marginLeft="@dimen/margin_vertical_default"
        android:layout_marginTop="@dimen/margin_vertical_default"
        android:layout_marginEnd="@dimen/margin_vertical_default"
        android:layout_marginRight="@dimen/margin_vertical_default"
        android:layout_marginBottom="@dimen/margin_vertical_default"
        android:background="@drawable/text_login"
        android:ems="10"
        android:hint="@string/text_hint_password"
        android:inputType="textPassword"
        android:paddingHorizontal="@dimen/text_login_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.607" />

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="@dimen/text_login_width"
        android:layout_height="@dimen/text_login_height"
        android:layout_marginStart="@dimen/margin_vertical_default"
        android:layout_marginLeft="@dimen/margin_vertical_default"
        android:layout_marginTop="@dimen/margin_vertical_default"
        android:layout_marginEnd="@dimen/margin_vertical_default"
        android:layout_marginRight="@dimen/margin_vertical_default"
        android:layout_marginBottom="@dimen/margin_vertical_default"
        android:background="@drawable/button_primary"
        android:text="@string/text_sign_in"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_password"
        app:layout_constraintVertical_bias="0.155" />

    <TextView
        android:id="@+id/text_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vertical_default"
        android:text="@string/text_forgot_password"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintStart_toStartOf="@+id/btn_sign_in"
        app:layout_constraintTop_toBottomOf="@+id/btn_sign_in" />

    <TextView
        android:id="@+id/text_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vertical_default"
        android:text="@string/text_sign_up"
        android:textColor="#000"
        android:textFontWeight="800"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintEnd_toEndOf="@+id/btn_sign_in"
        app:layout_constraintTop_toBottomOf="@+id/btn_sign_in" />

    <TextView
        android:id="@+id/text_or_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vertical_default"
        android:text="or login with"
        app:layout_constraintBottom_toTopOf="@+id/image_facebook_login"
        app:layout_constraintEnd_toEndOf="@+id/image_facebook_login"
        app:layout_constraintStart_toStartOf="@+id/image_facebook_login" />

    <ImageView
        android:id="@+id/image_phone_login"
        android:layout_width="@dimen/icon_login_width"
        android:layout_height="@dimen/icon_login_width"
        android:layout_marginStart="@dimen/margin_horizontal_icon"
        android:layout_marginLeft="@dimen/margin_horizontal_icon"
        android:layout_marginTop="@dimen/margin_vertical_default"
        android:layout_marginEnd="@dimen/margin_vertical_default"
        android:layout_marginRight="@dimen/margin_vertical_default"
        android:layout_marginBottom="@dimen/margin_vertical_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_facebook_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_or_login"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_smartphone" />

    <ImageView
        android:id="@+id/image_google_login"
        android:layout_width="@dimen/icon_login_width"
        android:layout_height="@dimen/icon_login_width"
        android:layout_marginStart="@dimen/margin_vertical_default"
        android:layout_marginLeft="@dimen/margin_vertical_default"
        android:layout_marginTop="@dimen/margin_vertical_default"
        android:layout_marginEnd="@dimen/margin_horizontal_icon"
        android:layout_marginRight="@dimen/margin_horizontal_icon"
        android:layout_marginBottom="@dimen/margin_vertical_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_facebook_login"
        app:layout_constraintTop_toBottomOf="@+id/text_or_login"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_google_plus" />

    <ImageView
        android:id="@+id/image_facebook_login"
        android:layout_width="@dimen/icon_login_width"
        android:layout_height="@dimen/icon_login_width"
        android:layout_marginStart="@dimen/margin_vertical_default"
        android:layout_marginLeft="@dimen/margin_vertical_default"
        android:layout_marginEnd="@dimen/margin_vertical_default"
        android:layout_marginRight="@dimen/margin_vertical_default"
        android:layout_marginBottom="@dimen/margin_vertical_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_sign_up"
        app:layout_constraintStart_toStartOf="@+id/text_forgot"
        app:srcCompat="@drawable/ic_facebook" />


</androidx.constraintlayout.widget.ConstraintLayout>
